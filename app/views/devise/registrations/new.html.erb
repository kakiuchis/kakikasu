<div class="row">
  <div class="col-xs-12 col-sm-offset-2 col-sm-8">
    <div class="content">
      <div class="discription">
        <h1>新規登録</h1>
        <p>登録することでテキスト更新情報がメール通知されます</p>
      </div>
      <div class="form-group">
        <%= link_to "Googleアカウントで登録", user_google_omniauth_authorize_path, class: "btn btn-danger btn btn-block" %>
      </div>
      <div class="form-group">
        <%= link_to "Githubアカウントで登録", user_github_omniauth_authorize_path, class: "btn btn-default btn btn-block" %>
      </div>
      <div class="or-container">
        <hr class="or-hr">
        <div class="or">または</div>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <% if resource.errors.present? %>
          <div class="alert alert-danger" role="alert">
            <a class="close" data-dismiss="alert">×</a>
            <%= devise_error_messages! %>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "あなたのメールアドレス" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード（6文字以上）" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "確認用パスワード（6文字以上）" %>
        </div>

        <div class="form-group">
          <%= f.submit "メールアドレスで登録", class: "btn btn-success btn btn-block" %>
          <%= link_to "登録確認メールが来ません", new_confirmation_path(resource_name) %>
        </div>
      <% end %>
      <div class="or-container">
        <hr class="or-hr">
        <div class="or">または</div>
      </div>
      <div class="menu">
        <%= link_to "テキスト一覧へ", texts_path, class: "btn btn-info btn btn-block" %>
        <%= link_to "カッキーに質問", new_inquiry_path, class: "btn btn-info btn btn-block" %>
        <%= link_to "TOPへ", root_path, class: "btn btn-info btn btn-block" %>
        <%= link_to 'ログイン', new_user_session_path, class: "btn btn-info btn btn-block" unless user_signed_in? %>
        <%= link_to 'ユーザ一覧', users_index_path, class: "btn btn-info btn btn-block" if user_signed_in? && current_user.role == "admin" %>
        <%= link_to 'メール配信', announcements_path, class: "btn btn-info btn btn-block" if user_signed_in? && current_user.role == "admin" %>
      </div>
    </div>
  </div>
</div>


