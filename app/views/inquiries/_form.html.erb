<%= form_with(model: inquiry, local: true) do |form| %>
  <% if inquiry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(inquiry.errors.count, "error") %> prohibited this inquiry from being saved:</h2>

      <ul>
      <% inquiry.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, id: :inquiry_email, class: "form-control", placeholder: "あなたのメールアドレス" %>
  </div>

  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, id: :inquiry_content, class: "form-control", rows: "10", placeholder: "内容をご記入ください" %>
  </div>
  
  <div class="menu">
    <%= form.submit "送信", class: "btn btn-success btn btn-block" %>
  </div>
<% end %>
