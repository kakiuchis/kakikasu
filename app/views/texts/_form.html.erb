<%= form_with(model: text, local: true) do |form| %>
  <% if text.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(text.errors.count, "error") %> prohibited this text from being saved:</h2>

      <ul>
      <% text.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :text_title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, id: :text_content, rows: "30", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :youtube_code %>
    <%= form.text_field :youtube_code, id: :text_youtube_code, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :slideshare_url %>
    <%= form.text_field :slideshare_url, id: :text_slideshare_url, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
