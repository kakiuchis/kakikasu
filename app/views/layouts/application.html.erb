<!DOCTYPE html>
<html>
  <head>
    <title>カキカス</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
  </head>
  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="col-xs-12 col-sm-offset-2 col-sm-8">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
          <span class="sr-only">Top</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          </button>
          <%= link_to "カキカス", root_path, class:"navbar-brand" %>
        </div>

        <div id="gnavi" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">            
            <li><%= link_to 'ログイン', new_user_session_path unless user_signed_in? %></li>
            <li><%= link_to "テキスト一覧", texts_path %></li>
            <li><%= link_to "カッキーに問い合わせ", new_inquiry_path %></li>
            <li><%= link_to 'ユーザ一覧', users_index_path if user_signed_in? && current_user.role == "admin" %></li>
            <li><%= link_to 'メール配信', announcements_path if user_signed_in? && current_user.role == "admin" %></li>
            <li><%= link_to "#{current_user.email}からログアウト", destroy_user_session_path, method: :delete if user_signed_in? %></li>
          </ul>
        </div>
        </div>
      </div>
    </nav>

    <div class="container-fluid">
      <% flash.each do |name, msg| %>
        <div class="alert alert-success" role="alert">
          <a class="close" data-dismiss="alert">×</a>
          <%= msg %>
        </div>
      <% end %>
      <%= yield %>
    </div>

    <a href="#" class="topBtn" id="topBtn">TOP</a>
    <script>
      $(document).ready(function(){
        $("#topBtn").hide();
        $(window).on("scroll", function(){
          if($(this).scrollTop() > 100){
            $("#topBtn").fadeIn("fast");
          }
          else{
            $("#topBtn").fadeOut("fast");
          }
        });
        $('#topBtn').click(function(){
          $('body,html').animate({
            scrollTop: 0
          }, 400); 
            return false;
        });
      });
    </script>
  </body>
</html>