<div class="row">
  <div class="col-xs-12 col-sm-offset-2 col-sm-8">
    <div class="content">
      <div class="discription">
        <h1>ログイン</h1>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "あなたのメールアドレス" %>
        </div>

        <div class="form-group">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード" %>
        </div>

   <!-- <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%> -->

        <div class="menu">
          <%= f.submit "ログイン", class: "btn btn-success btn btn-block" %>
          <hr>
        </div>
      <% end %>
      <div class="menu">
        <%= render "devise/shared/links" %>
        <%= link_to "テキスト一覧へ", texts_path, class: "btn btn-info btn btn-block" %>
      </div>
    </div>
  </div>
</div>
