<div class="row">
  <div class="col-xs-12 col-sm-offset-2 col-sm-8">
    <div class="content">
      <div class="discription">
        <h1>ログイン</h1>
      </div>
        <div class="form-group">
          <%= link_to "Googleでログイン", user_google_omniauth_authorize_path, class: "btn btn-danger btn btn-block" %>
        </div>
        <div class="form-group">
          <%= link_to "Githubでログイン", user_github_omniauth_authorize_path, class: "btn btn-default btn btn-block" %>
        </div>
        <div class="or-container">
          <hr class="or-hr">
          <div class="or">または</div>
        </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "あなたのメールアドレス" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード" %>
            <%= link_to "パスワードを忘れた", new_password_path(resource_name) %>
          </div>

          <div class="form-group">
            <%= f.submit "ログイン", class: "btn btn-success btn btn-block" %>
          </div>
        <% end %>
        <div class="or-container">
          <hr class="or-hr">
          <div class="or">初めての方は</div>
        </div>
        <div class="form-group">
          <%= link_to "新規登録", new_registration_path(resource_name), class: "btn btn-info btn btn-block" %>
        </div>
        <div class="or-container">
          <hr class="or-hr">
          <div class="or">または</div>
        </div>
        <div class="menu">
          <%= link_to "テキスト一覧へ", texts_path, class: "btn btn-info btn btn-block" %>
          <%= link_to "カッキーに質問", new_inquiry_path, class: "btn btn-info btn btn-block" %>
          <%= link_to "TOPへ", root_path, class: "btn btn-info btn btn-block" %>
          <%= link_to 'ユーザ一覧', users_index_path, class: "btn btn-info btn btn-block" if user_signed_in? && current_user.role == "admin" %>
          <%= link_to 'メール配信', announcements_path, class: "btn btn-info btn btn-block" if user_signed_in? && current_user.role == "admin" %>
        </div>
      </div>
    </div>
  </div>
</div>
